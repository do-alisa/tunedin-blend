{
  "name": "tunedin-blend",
  "private": true,
  "scripts": {
    "dev": "concurrently -n client,server -c cyan,magenta \"pnpm dev:client\" \"pnpm dev:server\"",
    "dev:client": "pnpm --filter @tunedin-blend/client dev",
    "dev:server": "pnpm --filter @tunedin-blend/server dev",
    "build": "pnpm --filter @tunedin-blend/client build && pnpm --filter @tunedin-blend/server build",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\""
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
